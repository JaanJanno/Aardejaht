<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/profile_title_header"
        style="@style/HeaderStyle"
        android:text="@string/profile" />

    <View style="@style/HeaderLineStyle" />

    <TextView
        android:id="@+id/profile_general_header"
        style="@style/HeaderStyle"
        android:text="@string/general_information" />

    <View style="@style/HeaderLineStyle" />

    <TextView
        android:id="@+id/profile_general_info"
        style="@style/TextStyle"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/margin_medium1"
        android:layout_marginStart="@dimen/margin_medium1" />

    <TextView
        android:id="@+id/profile_strategical_header"
        style="@style/HeaderStyle"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/strategical_information" />

    <View style="@style/HeaderLineStyle" />

    <TextView
        android:id="@+id/profile_strategical_info"
        style="@style/TextStyle"
        android:layout_marginLeft="@dimen/margin_medium1"
        android:layout_marginStart="@dimen/margin_medium1" />

</LinearLayout>