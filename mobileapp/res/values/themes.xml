<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTheme.Theme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/CustomTheme.ActionBar</item>
        <item name="android:actionBarTabStyle">@style/CustomTheme.ActionBarTab</item>
    </style>

    <style name="CustomTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/black</item>
        <item name="android:backgroundStacked">@drawable/header</item>
    </style>

    <style name="CustomTheme.ActionBarTab" parent="android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator</item>
    </style>

</resources>