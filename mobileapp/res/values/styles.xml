<resources>

    <style name="LoginStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_large1</item>
    </style>

    <style name="LoginButtonStyle" parent="LoginStyle">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_large2</item>
        <item name="android:layout_marginTop">@dimen/margin_medium2</item>
    </style>

    <style name="TextboxStyle" parent="LoginStyle">
        <item name="android:background">@drawable/textbox</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ems">10</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_header</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_large2</item>
        <item name="android:textColor">@color/dark_brown</item>
    </style>

    <style name="HeaderLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dark_brown</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_brown</item>
        <item name="android:textSize">@dimen/text_large1</item>
    </style>

    <style name="ListItem_ViewStyle">
        <item name="android:layout_width">@dimen/width_list_item</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_brown</item>
        <item name="android:textSize">@dimen/text_large1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="ListItem_LayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/margin_small</item>
        <item name="android:paddingRight">@dimen/margin_small</item>
    </style>
    
    <style name="ListItem_LayoutStyle.Expandable">
        <item name="android:paddingLeft">@dimen/margin_large1</item>
        <item name="android:paddingRight">@dimen/margin_large1</item>
    </style>

</resources>